<mtapp:widget
    label="<__trans phrase="Thank you for installing Movable Type">"
    class="welcome-widget">
    <div class="picture small">
        <img alt="<mt:var name="mt_product_name"> <mt:var name="mt_version_id">" src="<mt:var name="static_uri">images/logo/mt-spanner.png" />
    </div>
    <div class="useful-links">
        <p><__trans phrase="You are now ready to:"></p>
        <ul>
            <li>
                <__trans phrase="Create a new page on your website">
            </li>
            <li>
                <__trans phrase="Create a blog on your website">
                <span class="description"><__trans phrase="Create a blog (many blogs can exist in one website) to start posting."></span>
            </li>
            <li>
                <a href="<__trans phrase="http://www.movabletype.org/documentation/">"><__Trans phrase="Movable Type Online Manual"></a>
                <span class="description"><__trans phrase="Whether you're new to Movable Type or using it for the first time, learn more about what this tool can do for you."></span>
            </li>
        </ul>
        <div class="actions-bar">
          <button
              onclick="javascript:removeWidget('<mt:var name="widget_id">'); return false;"
              title="<__trans phrase="Remove this widget">">
              <__trans phrase="Close"></button>
        </div>
    </div>
</mtapp:widget>
